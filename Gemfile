source 'https://rubygems.org'

ruby '2.6.9'

# gem used for postgresql database
gem 'pg'

# gem used in non-rails applications to use rails migrations
gem 'standalone_migrations'

# standalone_migrations need rake to be able to create migrations and run them, as in Rails
gem 'rake'

# Gem needed to load environment variables
gem 'dotenv'

gem 'pry-byebug'
gem 'json'
